{
    "version": 2,
    "builds": [
        {
            "src": "src/app.js",
            "use": "@vercel/nodejs"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/src/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "/src/app.js"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}